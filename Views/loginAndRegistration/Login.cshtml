<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css"/>
    <title>FormSubmission</title>
</head>
<body>
  
@model theWall.Models.LoginUser

<div class="container">
        <div class="card">
            <div class="text-center">
            <h1>Login</h1>
        </div>
<form asp-controller="loginAndRegistration" asp-action="loginUser" method="post">
    
    <div class="form-group">
        @ViewBag.email
      <span asp-validation-for="email"></span>
      <br>
    <label for="noteTitle">Email:</label>
    <input type="email" class="form-control" asp-for="email" placeholder="Email Adress">
  </div>
    <div class="form-group">
      <span asp-validation-for="password"></span>
      <br>
      @ViewBag.password
      <span asp-validation-for="password"></span>
      <br>
    <label for="noteTitle">Password:</label>
    <input type="password" class="form-control" asp-for="password" placeholder="Your Password">
  </div>
    <div class="text-center">
  <button type="submit" class="btn btn-primary">Submit</button>
  </div>
  <br>
  </form>
  </div>
  </div>
</body>
</html>